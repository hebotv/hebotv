{
  "name": "hebotv-app",
  "description": "A IPTV Client",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "main": "main.js",
  "author": {
    "name" : "Embbnux Ji",
    "email": "embbnux@embbnux.com",
    "url" : "https://github.com/embbnux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hebotv/hebotv.git"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "package": "electron-builder",
    "package-all": "electron-builder -mwl",
    "package-linux": "electron-builder --linux -p never",
    "package-mac": "electron-builder -m -p never",
    "package-win": "electron-builder -w -p never"
  },
  "devDependencies": {
    "electron": "15.1.2",
    "electron-builder": "^22.13.1"
  },
  "build": {
    "appId": "com.embbnux.hebotv.app",
    "productName": "Hebo TV",
    "copyright": "Copyright Â© 2021 Embbnux Ji",
    "publish": [{
      "provider": "github",
      "owner": "hebotv",
      "repo": "hebotv"
    }],
    "directories": {
      "buildResources": "./",
      "output": "release"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "icon.png",
      "icon.icns"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "icon.icns"
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["deb", "AppImage", "snap", "rpm"],
      "category": "Video",
      "executableName": "hebotv"
    }
  }
}
